  Vcl.Imaging.pngimage, Vcl.Buttons;

type
  TfrmLogin = class(TForm)
    pnl_fundo: TPanel;
    pnl_lateral: TPanel;
    Label1: TLabel;
    Label2: TLabel;
    Image1: TImage;
    Label3: TLabel;
    Image2: TImage;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Panel1: TPanel;
    Label7: TLabel;
    Panel2: TPanel;
    edtUsuario: TEdit;
    Panel3: TPanel;
    Label8: TLabel;
